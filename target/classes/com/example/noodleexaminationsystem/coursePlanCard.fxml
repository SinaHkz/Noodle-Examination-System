<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<!--pane act like a button and open course plan-->

<HBox fx:id="card" prefHeight="180.0" prefWidth="300.0" styleClass="transparent" stylesheets="@../../../style-sheets/card.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.noodleexaminationsystem.CardController">
   <children>
      <Pane prefHeight="178.0" prefWidth="301.0" styleClass="card">
         <children>
            <ImageView fx:id="image" fitHeight="180.0" fitWidth="362.0" layoutX="2.0" layoutY="12.0" opacity="0.4" pickOnBounds="true" preserveRatio="true" styleClass="image">
               <image>
                  <Image url="@../../../images/course.png" />
               </image>
            </ImageView>
            <Button fx:id="courseName" layoutX="2.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="299.0" styleClass="white-background" text="CoursePlanName">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</HBox>
