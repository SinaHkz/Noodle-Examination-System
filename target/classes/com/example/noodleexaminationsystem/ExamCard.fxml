               <image>
                  <Image url="@../../../images/White.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="85.0" fitWidth="96.0" layoutX="213.0" layoutY="97.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/Check.png" />
               </image>
            </ImageView>
            <Button fx:id="examName" layoutX="-14.0" layoutY="46.0" mnemonicParsing="false" prefHeight="75.0" prefWidth="328.0" text="ExamName">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
         <styleClass>
            <String fx:value="card" />
            <String fx:value="transparent" />
         </styleClass>
      </Pane>
   </children>
</HBox>
